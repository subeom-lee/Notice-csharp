@model Notice.Controllers.PostsController.PostViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>전체 게시물 조회</h1>
<br />
<div class="d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-primary mr-3">글 작성</a>
    <form asp-action="Index" method="get" class="form-inline">
        <div class="input-group mr-3">
            <input style="width:300px" type="text" placeholder="검색어를 입력해주세요." class="form-control" name="searchString" required>
            <div class="input-group-append">
                <button class="btn btn-primary">검색</button>
            </div>
        </div>
    </form>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" name="sortType" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            분류
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="?sortType=viewcount">조회수순</a></li>
            <li><a class="dropdown-item" href="?sortType=createdatetime">최신순</a></li>
            <li><a class="dropdown-item" href="?sortType=olddatetime">오래된순</a></li>
        </ul>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th style="text-align:center;">
                @Html.DisplayName("조회수")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("제목")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("내용")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("작성일")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("수정일")
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.ViewCount)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.contents)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.CreatedDatetime)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.UpdatedDatetime)
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.post_id">조회</a> |
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.post_id">수정</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.post_id">삭제</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div style="text-align:center">
    <div class="btn-group me-2" role="group" aria-label="First group">
        @if (Model.CurrentPage > 1)
        {
            <a id="first" asp-action="Index" asp-route-page="@(1)" class="page-link">&laquo;</a>
        }
        @if (Model.CurrentPage > 1)
        {
            <a id="first" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="page-link">&lt;</a>
        }
        <a asp-action="Index" asp-route-page="@(1)" class="page-link">1</a>
        @if (Model.TotalPages > 1)
        {
            <a asp-action="Index" asp-route-page="@(2)" class="page-link">2</a>
        }
        @if (Model.TotalPages > 2)
        {
            <a asp-action="Index" asp-route-page="@(3)" class="page-link">3</a>
        }
        @if (Model.TotalPages > 3)
        {
            <a asp-action="Index" asp-route-page="@(4)" class="page-link">4</a>
        }
        @if (Model.TotalPages > 4)
        {
            <a asp-action="Index" asp-route-page="@(5)" class="page-link">5</a>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="page-link">&gt;</a>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-action="Index" asp-route-page="@(Model.TotalPages)" class="page-link">&raquo;</a>
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("a.dropdown-item").click(function () {
                var selectedType = $(this).text();
                $("#sortType").text(selectedType);
            });
        });
    </script>
    }