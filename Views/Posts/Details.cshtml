@model Notice.Models.Post

@{
    ViewData["Title"] = "Details";
}

<h1>게시물 조회</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("제목")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("내용")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contents)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("작성일")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDatetime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.post_id">수정</a> |
    <a asp-action="Index">목록으로</a>
</div>
