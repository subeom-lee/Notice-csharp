@model IEnumerable<Notice.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>검색 게시물 조회</h1>

<table class="table">
    <thead>
        <tr>
            <th style="text-align:center;">
                @Html.DisplayName("제목")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("내용")
            </th>
            <th style="text-align:center;">
                @Html.DisplayName("작성일")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.contents)
                </td>
                <td style="text-align:center; vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.CreatedDatetime)
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.post_id">조회</a> |
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.post_id">수정</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.post_id">삭제</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="text-align:center">
    <form asp-action="Search" method="get">
        <div style="text-align:center">
            <div style="display: flex;">
                <div>
                    <input type="text" placeholder="검색어를 입력해주세요." class="form-control" name="q" required>
                </div>
                <div style="float:left; margin-left:10px;">
                    <button class="btn btn-primary">검색</button>
                    <a class="btn btn-primary"  asp-action="Index">목록으로</a>
                </div>
            </div>
        </div>
    </form>
    <br />
    <br />
    <div class="btn-group me-2" role="group" aria-label="First group">
        <button type="button" class="page-link">&laquo;</button>
        <button type="button" class="page-link">1</button>
        <button type="button" class="page-link">2</button>
        <button type="button" class="page-link">3</button>
        <button type="button" class="page-link">&raquo;</button>
    </div>
</div>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary" style="float:right">글 작성</a>
</p>
